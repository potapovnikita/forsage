h1.title
    font-family $FuturaFont
    font-size 53px
    color whiteMain
    text-align center
    font-weight bold
    font-style normal
    font-stretch normal
    line-height 1.11
    letter-spacing 1px

h2.title
    text-align center
    font-family $FuturaFont
    font-size 28px
    font-weight bold
    color #000

h3.title
    font-family $FuturaFont
    font-size 18px
    font-weight bold
    letter-spacing 0.4px
    color #000

.text_default
    font-family $ProximaNovaFont
    font-size 16px
    font-weight normal
    font-style normal
    font-stretch normal
    line-height normal
    letter-spacing 0.4px
    color #000

.text_default-white
    font-family $ProximaNovaFont
    font-size 16px
    font-weight normal
    font-style normal
    font-stretch normal
    line-height normal
    letter-spacing 0.4px
    color whiteMain

@media only screen and (max-width 767px)
    h1.title
        font-size 50px
    h2.title
        font-size 26px
    h3.title
        font-size 18px


@media only screen and (max-width 450px)
    h1.title
        font-size 40px

@media only screen and (max-width 450px)
    h1.title
        font-size 34px
    h3.title
        font-size 17px

@media only screen and (max-width 350px)
    h3.title
        font-size 16px




